<Page
    x:Class="SettingsUI.Demo.Pages.ContentDialogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WinUICommunity.SettingsUI.Controls">

    <controls:SettingsPageControl
        IsTabStop="False"
        ModuleDescription="With the help of ShowAsyncQueue extension you can open multiple ContentDialogs."
        ModuleImageSource="ms-appx:///Assets/Modules/PT.png"
        ModuleTitle="ContentDialog: ShowAsyncQueue Extension">
        <controls:SettingsPageControl.ModuleContent>
            <StackPanel>
                <Button Click="Button_Click" Content="Open 5 ContentDialog" HorizontalAlignment="Center"/>
            </StackPanel>
        </controls:SettingsPageControl.ModuleContent>
    </controls:SettingsPageControl>
</Page>
